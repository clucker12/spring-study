<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace="com.care.root.mybatis.member.MemberMapper">
	<resultMap type="com.care.root.member.dto.MemberDTO" id="member">
		<!-- <id/>는 primary값일 때 사용 -->
		<result property="id" column="id"/>
		<result property="pwd" column="pw"/>
		<result property="addr" column="addr"/>
	</resultMap>
	<insert id="insert">
			insert into membership values(#{id}, #{pwd}, #{addr})
	</insert>
		<select id="getlist" resultMap="member">
			select * from membership
		</select>
		<select id="getmember" resultMap="member">	
			select * from membership where id = #{id}
		</select>
		
</mapper>